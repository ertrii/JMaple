html
  head
    title npc - 
        =uid
    link(rel="stylesheet" href="./css/base.css")
    link(rel="stylesheet" href="./css/section.css")
    link(rel="stylesheet" href="./css/modern.css")
  body
    main
        h1 NPC: 
            span=uid
        button#btn-show Open #{name}
        .jmaple.hidden(npc-uid=uid dispose=false type=windowType)
            .head
            .body
                .npc
                    .img
                        img(src=image)
                    p.name=name
                .dialog
                    content
                        .info
                    .btns
            .footer
                div
                    button.exit ENDCHAT
                div
    script(type="text/javascript").
        !{handler}
        const mapleWindow = handler(document.querySelector('div.jmaple'))
        document.getElementById('btn-show').onclick = function(){
            mapleWindow.open()
        }
