html
  head
    title NPC
        =id
    link(rel="stylesheet" href="./css/base.css")
    link(rel="stylesheet" href="./css/section.css")
    link(rel="stylesheet" href="./css/classic.css")
  body
    main
        h1 NPC: 
            span=id
        .jmaple
            .head
            .body
                .npc
                    .img
                        img(src=image)
                    p.name=name
                .dialog
                    .info
                        h2.title Title Main
                        p.text Hi everyone, this is a test message.
                        ul.list
                            li option 1
                            li option 2
                            li option 3
                    .btns
                        button PREV
                        button NEXT
            .footer
                div
                    button.exit ENDCHAT
                div
                    button.yes YES
                    button.no NO


